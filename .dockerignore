# Ignore node_modules as they will be installed in the container
node_modules

# Ignore local environment files
.env
.env.production

# Ignore Docker files except the ones needed
!Dockerfile
!docker-compose.yml
!docker-compose.prod.yml

# Ignore log files
*.log
logs
debug.log

# Ignore temporary files and directories
*.temp
*.tmp
*.swp
*.swo
*.pid

# Ignore system-specific files
.DS_Store
Thumbs.db

# Ignore Git-related files
.git
.gitignore

# Ignore build and cache directories
dist
build
.cache

# Ignore editor and IDE-specific files
.vscode
.idea

# Ignore files from tests (if they aren't required in the container)
coverage
*.spec.*
*.test.*
